public class Gamestate
{
	int playerHand = HitStandSplit.playerHit();
	int dealerHand = HitStandSplit.dealerHit();


	public static boolean playerWins()
	{
		boolean win = false;
		if(int playerHand > int dealerHand|| int playerHand <= 21)
		{
			win = true
		}
	}
	public static int[] ace()
	{

		/*int[] something = {
			5, 4, 1, 11
		};*/
		if(playerHand > 21)
		{
			for(int i = 0; i < something.length - 1; i++)
			{
				if(something[i] == 11)
				{
					something[i] = 1;
				}
			}
		}
	return something;
	}
}
